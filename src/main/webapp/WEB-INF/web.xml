    <welcome-file-list>
        <welcome-file>/home.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.nclodger.control.ControllerServlet</servlet-class>
    </servlet>
    <!-- On registration submit -->
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>


    <!-- On login submit -->
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

